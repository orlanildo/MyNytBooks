<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/inc_toolbar_details"
        layout="@layout/include_toolbar" />

    <TextView
        android:id="@+id/lb_title_details"
        style="@style/MyTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/book_details_title_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inc_toolbar_details"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_title_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/lb_title_details"
        app:layout_constraintTop_toBottomOf="@+id/lb_title_details"
        tools:text="@string/book_details_title_value" />

    <TextView
        android:id="@+id/lb_desc_details"
        style="@style/MyTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/book_details_desc_label"
        app:layout_constraintStart_toStartOf="@+id/lb_title_details"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_details" />

    <TextView
        android:id="@+id/tv_desc_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/lb_title_details"
        app:layout_constraintTop_toBottomOf="@+id/lb_desc_details"
        tools:text="@string/book_details_desc_value" />

</androidx.constraintlayout.widget.ConstraintLayout>